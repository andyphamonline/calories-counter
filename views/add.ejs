<header>

	<img class='goal_header_img' src='/images/logo_50.jpg' alt='Bacon logo' title='Eat more bacon'>
	<h1 class='goal_header_h'>Add Food</h1>
	<p class='goal_header_p'>Hi, <span class='goal_header_span'><%= currentUser.name %></span></p>

	<nav>
		<a href='/goal' class='btn btn-primary'>Goal</a>
		<a href='/diary' class='btn btn-primary'>Diary</a>
		<a href='/add' class='btn btn-primary'>Add Food</a>
		<a href = '/logout' class="btn btn-primary">Log out</a>

	</nav>

</header>

<main>

	<form method="POST" role="form">
	
		<div class="form-group">
			<input type="text" class="searchBar form-control" name='search' placeholder="i.e. cheese">
		</div>
	
		<button type="submit" class="btn btn-primary">Search</button>
	</form>

	
	<div class="row">
		<form action="/" method="POST" role="form">
			<div class="foodResult col-xs-6 col-sm-6 col-md-6 col-lg-6">
				<% if (data) { %>
				<% data.list.item.forEach(function(food) { %>
					<a href="<%= food.name %> "><%= food.name %></a>
					<br>
				<% }); %>
				<% } %>
			</div>

		</form>


		<div class="quantity col-xs-6 col-sm-6 col-md-6 col-lg-6">
			<form>
				<p>Quantity</p>
				<input type='text' name='quanity' placeholder='i.e. 6'>
				<p>gram</p>
				<br>

				<p>Carb</p>
				<input type='text' name='carb'>
				<p>Fat</p>
				<input type='text' name='carb'>
				<p>Protein</p>
				<input type='text' name='carb'>
			</form>
		</div>
	</div>

	



</main>